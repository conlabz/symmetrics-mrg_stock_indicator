<config>
    <modules>
        <Symmetrics_StockIndicator>
            <version>0.1.11</version>
        </Symmetrics_StockIndicator>
    </modules>
    <global>
        <blocks>
            <stockindicator>
                <class>Symmetrics_StockIndicator_Block</class>
            </stockindicator>
        </blocks>
        <resources>
            <Symmetrics_StockIndicator>
                <setup>
                    <module>Symmetrics_StockIndicator</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </Symmetrics_StockIndicator>
        </resources>
        <helpers>
            <stockindicator>
                <class>Symmetrics_StockIndicator_Helper</class>
            </stockindicator>
        </helpers>
    </global>
    <frontend>
        <translate>
            <modules>
                <Symmetrics_StockIndicator>
                    <files>
                        <default>Symmetrics_StockIndicator.csv</default>
                    </files>
                </Symmetrics_StockIndicator>
            </modules>
        </translate>
        <layout>
            <updates>
                <stockindicator>
                    <file>stockindicator.xml</file>
                </stockindicator>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <Symmetrics_StockIndicator>
                    <files>
                        <default>Symmetrics_StockIndicator.csv</default>
                    </files>
                </Symmetrics_StockIndicator>
            </modules>
        </translate>
    </adminhtml>
</config>