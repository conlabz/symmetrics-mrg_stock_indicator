<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss"><stylesheet>css/stock_indicator.css</stylesheet></action>
        </reference>
    </default>
    <catalog_product_view>
        <reference name="alert.urls">
            <block type="stockindicator/product_view" name="product.info.stockindicator" template="stockindicator/indicator.phtml" />
        </reference>
    </catalog_product_view>
</layout>